{
  "compilerOptions": {
    "outDir": "build",
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "plugins": [
      {
        "transform": "typescript-transform-extensions",
        "extensions": { ".ts": ".js" }
      }
    ]
  },
  "include": ["src"]
}
